#!/usr/bin/env ruby 

require 'highline/import'

key = { 's' => 'Ed', 'e' => '3', 'c' => 'ff', 'r' => 'W5', 't' => 'o' }

password = ask("Enter password: ") { |q| q.echo = '*' }

puts password

output = password.split('').map do |char|
  if key.has_key? char
    key[char]
  else
    char
  end
end.join

puts output
